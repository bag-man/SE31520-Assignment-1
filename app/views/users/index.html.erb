<h1>User accounts</h1>

<% if @users.length > 0 %>
    <table>
      <thead>
      <tr>
        <th>Username</th>
        <th>Surname</th>
        <th>First name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.lastname %></td>
            <td><%= user.firstname %></td>
            <td><%= link_to('Show', user_path(user, page: @users.current_page)) %></td>
            <td><%= link_to('Edit', edit_user_path(user, page: @users.current_page)) %></td>
            <td><%= link_to('Delete', user_path(user, page: @users.current_page), data: {confirm: 'Are you sure?'}, method: :delete)
            %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>
<br>
<div class="digg_pagination">
  <div>
    <%= page_entries_info @users %>
  </div>
  <%= will_paginate @users, container: false %>
</div>
<br>

<%= link_to 'New user', new_user_path(page: @users.current_page) %>
